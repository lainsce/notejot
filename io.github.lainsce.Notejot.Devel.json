{
    "app-id" : "io.github.lainsce.Notejot.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.Notejot",
    "rename-icon" : "io.github.lainsce.Notejot.Devel",
    "finish-args" : [
    	"--filesystem=xdg-run/gvfsd",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "desktop-file-name-suffix" : " (Devel)",
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
	    {
		"name": "libsass",
		"cleanup": ["*"],
		"sources": [
		    {
			"type" : "git",
			"url" : "https://github.com/sass/libsass.git"
		    },
		    {
			"type" : "script",
			"dest-filename" : "autogen.sh",
			"commands" : [ "autoreconf -si" ]
		    }
		]
	    },
	    {
		"name": "sassc",
		"cleanup": ["*"],
		"sources": [
		    {
			"type" : "git",
			"url" : "https://github.com/sass/sassc.git"
		    },
		    {
			"type" : "script",
			"dest-filename" : "autogen.sh",
			"commands" : [ "autoreconf -si" ]
		    }
		]
	    },
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dvapi=true",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "notejot",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../../"
                }
            ]
        }
    ]
}
